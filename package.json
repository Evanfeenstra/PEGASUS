{
  "name": "pegasus",
  "keywords": [
    "iota",
    "wallet",
    "mam explorer",
    "javascript",
    "react",
    "chrome extension",
    "iota-js injection"
  ],
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:trampoline": "lerna run build --scope @pegasus/trampoline",
    "build:popup": "lerna run build --scope @pegasus/popup",
    "build:core": "lerna run build --ignore @pegasus/popup",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'",
    "lint": "lerna run lint",
    "build:zip": "yarn build && npx bestzip chrome-extension.zip dist manifest.json packages/popup/build packages/popup/static"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.1.0",
    "babel-eslint": "^10.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-standard": "^4.0.0",
    "lerna": "^3.4.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "styled-components": "^4.3.2"
  }
}
